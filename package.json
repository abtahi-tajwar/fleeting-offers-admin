{
	"name": "fleeting-offers-admin",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"theme": "tsx scripts/generate-tailwind-theme.ts",
		"dev": "yarn theme && vite dev",
