		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.5",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"vite": "^6.2.6"
	},
